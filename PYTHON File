# app.py
from flask import Flask, request, jsonify

app = Flask(__name__)

@app.route('/api/contact', methods=['POST'])
def contact():
    data = request.json
    # Here you would typically save the data to a database or send an email
    print(f"Received contact form submission: {data}")
    return jsonify({"message": "Thank you for your message! We will get back to you soon."}), 200

if __name__ == '__main__':
    app.run(debug=True)
